@model KievGyms.Client

@{
    ViewData["Title"] = "Add";
}

<h1>Add New Client</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientFullName" class="control-label"></label>
                <input asp-for="ClientFullName" class="form-control" />
                <span asp-validation-for="ClientFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientDateOfBirth" class="control-label"></label>
                <input asp-for="ClientDateOfBirth" class="form-control" />
                <span asp-validation-for="ClientDateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientMobilePhone" class="control-label"></label>
                <input asp-for="ClientMobilePhone" class="form-control" />
                <span asp-validation-for="ClientMobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
