@model IEnumerable<KievGyms.GymMembership>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New GymMembership</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gym)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymMembershipPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymMembershipInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymMembershipExpiryDate)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Gym.GymName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ClientFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GymMembershipPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GymMembershipInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GymMembershipExpiryDate)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.GymMembershipId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GymMembershipId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GymMembershipId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
