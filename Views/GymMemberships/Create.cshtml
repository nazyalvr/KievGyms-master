@model KievGyms.GymMembership

@{
    ViewData["Title"] = "Create";
}

<h1>Create New GymMembership</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GymId" class="control-label"></label>
                <select asp-for="GymId" class ="form-control" asp-items="ViewBag.GymId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GymMembershipPrice" class="control-label"></label>
                <input asp-for="GymMembershipPrice" class="form-control" />
                <span asp-validation-for="GymMembershipPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GymMembershipInfo" class="control-label"></label>
                <input asp-for="GymMembershipInfo" class="form-control" />
                <span asp-validation-for="GymMembershipInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GymMembershipExpiryDate" class="control-label"></label>
                <input asp-for="GymMembershipExpiryDate" class="form-control" />
                <span asp-validation-for="GymMembershipExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
